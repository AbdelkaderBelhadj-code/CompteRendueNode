    <title>Document</title>
    <script src="/socket.io/socket.io.js"> </script>
</head>
<body>
    <h1>hello</h1>
    <script>
            const socket = io.connect("ws://localhost:3000");

            socket.on("msg",(data)=>{
                p = document.createElement("p");
                p.innerText = data
                document.body.append(p);
            })
    </script>

